# ──────────────────────────────────────────────────────────────
# 1. Laravel core generated files
# ──────────────────────────────────────────────────────────────
/vendor
/node_modules
/public/hot
/public/storage          # <-- symlink, created by `php artisan storage:link`
/public/build
/storage/*.key
/bootstrap/cache/*.php
/storage/framework/cache/data/*
/storage/framework/sessions/*
/storage/framework/views/*.php
/storage/logs/*.log

# ──────────────────────────────────────────────────────────────
# 2. Environment & secrets
# ──────────────────────────────────────────────────────────────
.env
.env.*                  # .env.local, .env.testing, etc.
!.env.example           # <-- keep example for new devs
.phpunit.result.cache
auth.json
npm-debug.log
yarn-error.log

# ──────────────────────────────────────────────────────────────
# 3. IDE / editor junk
# ──────────────────────────────────────────────────────────────
.idea/
.vscode/
.history/
*.sublime-*
*.swp

# ──────────────────────────────────────────────────────────────
# 4. OS / temp files
# ──────────────────────────────────────────────────────────────
.DS_Store
Thumbs.db
*.log

# ──────────────────────────────────────────────────────────────
# 5. Fastkart / custom installer files
# ──────────────────────────────────────────────────────────────
installation.json
fzip.li.dic
_log.dic.xml
.migration
/stubs
/storage/dotenv-editor

# ──────────────────────────────────────────────────────────────
# 6. Uploaded user content (KEEP OUT OF GIT!)
# ──────────────────────────────────────────────────────────────
/storage/app/public/*   # <-- user uploads, dummy images, etc.
!/storage/app/public/.gitkeep   # <-- keep folder structure

# ──────────────────────────────────────────────────────────────
